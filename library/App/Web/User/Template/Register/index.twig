{% extends 'layout.twig' %}

{% block title %}Регистрация{% endblock %}

{% block head %}<h1>Регистрация</h1>{% endblock %}

{% block body %}
    <div class="content">
        <div class="pure-g">
            <div class="pure-u-1-3 hide-md"></div>
            <div class="pure-u-md-1-3 pure-u-1 pure-u-sm-1">
                <form class="pure-form full-w" id="pass-auth-form">
                    <fieldset class="pure-group">
                        <h1>Придумайте логин и пароль</h1>
                        <h1><input type="text" class="pure-input-1 auto-save" name="login" placeholder="Логин"></h1>
                        <h1><input type="password" class="pure-input-1" name="password" placeholder="Пароль"></h1>
                        <h1><input type="password" class="pure-input-1" name="password_repeat" placeholder="Еще разок пароль"></h1>
                    </fieldset>

                    <button type="submit" class="pure-button pure-input-1 pure-button-primary">Зарегистрироваться</button>
                </form>
            </div>
            <script type="text/javascript">
                setupForm($('#pass-auth-form'), 'user', function (data) {
                    alert(JSON.stringify(data));
                    if (data['id']) {
                        nav.go('/');
                    }
                }, function (data) {
                    console.log(data.responseText);
                });
            </script>
            <div class="pure-u-1-3 hide-md" ></div>
        </div>
    </div>
{% endblock %}
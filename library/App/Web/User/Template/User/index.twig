{% extends _layout ? _layout : 'layout.twig' %}

{% block title %}Профиль {{ user.nickname }}{% endblock %}

{% block head %}<h1>{{ user.nickname }} <a class="alignright" href="/user-auth/">выйти</a></h1> {% endblock %}

{% block body %}
    <div class="content">
        <div class="pure-g">
            {% if(projects) %}
            <div class="pure-u-1 pure-u-md-1-2">
                <h1>Автор проектов</h1>
                <div class="pure-g">
                    {% for project in projects %}
                        <div class="pure-u-1">
                            <h2><a href="/projects/{{ project.id}}">{{ project.title}}</a></h2>
                            <p>{{ project.desc }}</p>
                            <p><a href="/projects/{{ project.id}}">узнать больше</a></p>
                        </div>
                    {% endfor %}
                </div>    
            </div>
            {% endif %}
            {% if(projects_joined) %}
            <div class="pure-u-1 pure-u-md-1-2">
                <h1>Участвует в проектах</h1>
                <div class="pure-g">
                    {% for project in projects_joined %}
                        <div class="pure-u-1">
                            <h2><a href="/projects/{{ project.id}}">{{ project.title}}</a></h2>
                            <p>{{ project.desc }}</p>
                            <p><a href="/projects/{{ project.id}}">узнать больше</a></p>
                        </div>
                    {% endfor %}
                </div>        
            </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
<!doctype html>
<html lang="en-US">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Клиника Идей{% endblock %}</title>
    <link rel="stylesheet" href="https://unpkg.com/purecss@1.0.0/build/pure-min.css" integrity="sha384-nn4HPE8lTHyVtfCBi5yW9d20FjT8BJwUXyWZT9InLYax14RDjBj46LmSztkmNP9w" crossorigin="anonymous">
    <link rel="stylesheet" href="https://unpkg.com/purecss@1.0.0/build/grids-min.css">
    <link rel="stylesheet" href="https://unpkg.com/purecss@1.0.0/build/grids-responsive-min.css">
    <link rel="stylesheet" href="/vendor/magnific-popup.css">
    <script type="text/javascript" src="/vendor/jquery.min.js"></script>
    <script type="text/javascript" src="/vendor/jquery.magnific-popup.min.js"></script>
    <script type="text/javascript" src="/js/main.js"></script>
    <script type="text/javascript" >
        var transport = Object.create(transportProto);
        var connection = Object.create(ajaxConnection);
        connection.host = document.location.protocol + '//' + document.location.host + '/rest';
        transport.setConnection(connection);
        transport.call('get', 'auth-user', {}, function (data) {
            if (typeof data.user_id !== 'undefined') {
                transport.call('get', 'user', {id : data.user_id}, function (user) {
                    $("#login a").text(user.nickname);
                })
            }
        });
    </script>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style type="text/css">
        
        html {
            font-size: 10px;
            background: url("/image/pattern.png") center top;
            background-size: 75px;
        }

        /**
        sm	@media screen and (min-width: 35.5em)	≥ 568px	 .pure-u-sm-*
        md	@media screen and (min-width: 48em)	    ≥ 768px	 .pure-u-md-*
        lg	@media screen and (min-width: 64em)	    ≥ 1024px .pure-u-lg-*
        xl	@media screen and (min-width: 80em)	    ≥ 1280px .pure-u-xl-*
        **/
        
        .hide-sm, .hide-md, .hide-lg, .hide-xl {
            display: none;
        }
        
        @media (min-width: 35.5em) { 
            html {
                font-size: 12px;
            }
            
            .hide-sm {
                display: block;
            }
        }

        @media screen and (min-width: 48em){
            html {
                font-size: 14px;
            }
            
            .hide-md {
                display: block;
            }
        }

        @media screen and (min-width: 64em){
            html {
                font-size: 16px;
            }

            .hide-lg {
                display: block;
            }
        }

        @media screen and (min-width: 80em) {
            html {
                font-size: 16px;
            }
            
            .hide-xl {
                display: block;
            }
        }
            
        .logo {
            margin: 1rem ; font-size: 2em; color: #111111;
            white-space: nowrap; overflow: hidden;
        }
        
        .top-menu {
            margin: 1rem; font-size: 2em; color: #eeeeee;
        }

        a, a:visited, a:active {
            /*color: #aaaaaa;*/
            color: #222222;
            text-decoration: underline;
            -webkit-transition: color 0.1s ease-out ;
            -moz-transition: color 0.1s ease-out ;
            -o-transition: color 0.1s ease-out ;
            transition: color 0.1s ease-out ;
        }

        a:hover {
            color: #6196d2;
        }

        .menu a {
            text-decoration: none;
        }

        .header-area {
            background: rgba(0,98,152, 0.8);
            height: 4em;
        }

        .content-area {
            
        }

        button {
            height: 36px;
        }
        
        .sub-theme {
            background-color: rgba(239, 209, 159, 0.8);
        }

        html, body {
            height: 100%;
            width: 100%;
        }

        .main-content-parent {
            text-align: center;
        }
        
        .main-content {
            display: inline-block;
            text-align: left;
            max-width: 1400px;
            width: 100%;
        }
        
        html {
            text-align: center;
        }
        
        .zero-layer {
            padding: 0 1rem;
        }
        
        .content {
            padding: 0 1rem ;
        }

        .alignleft {
            float: left;
        }
        .alignright {
            float: right;
        }
        
        .align-parent {
            clear: both;
        }

        .pure-form input, .pure-form textarea  {
            box-shadow: none !important;
            border: none !important;
        }
        
        .color-bg-main-tr {
            background-color: rgba(255,255,255,0.8);
        }

        .color-red {
            background-color: red;
        }
        
        .padding-1 {
            padding: 1rem;
        }
        
        .block-25 {
            height: 5em;
            text-overflow: ellipsis;
        }
        
    </style>
</head>
<body>
<div class="header-area main-content-parent">
    <div class="pure-g main-content">
        <div class="pure-u-1-5 menu">
            <div class="logo">
                <a href="/">R-Store</a>   
            </div>
        </div>
        <div class="pure-u-4-5 menu" style="">
            <div class="top-menu align-parent">
                <a href="/projects/new/project">+проект</a>
                <a href="/">все проекты</a>
                <span id="login">
                    <a href="/user-auth/" class="alignright">войти</a>
                </span>
            </div>
        </div>
    </div>
</div>
<div class="main-content-parent sub-theme">
    <div class="main-content">
        <div class="zero-layer">
            {% block head %}{% endblock %}    
        </div>
    </div>
</div>
<div class="main-content-parent">
    <div class="main-content">
        {% block body %}
        {% endblock %}
    </div>
</div>
{% if env.debug %}
<div class="main-content-parent">
    <div class="pure-g main-content">
        <div class="pure-u-1 logs-footer">
            <script>
                $.get('/dev-logs/{{ request_id }}', function (data) {
                    $( ".logs-footer" ).html( data );
                })
            </script>
        </div>
    </div>
</div>
{% endif %}
</body>
</html>
